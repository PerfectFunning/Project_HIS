<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.medicine.mapper.HisMedicineCartMapper">

    <select id="selectHisMedicineCartByUserId" resultType="com.ruoyi.medicine.domain.Cart">
        select * from his_medicine_cart
        <where>
            userId=#{userId}
        </where>
    </select>

    <insert id="insertCartInfoMapper">
        insert into his_medicine_cart values(default,#{userId},#{cart},#{remark})
    </insert>

    <update id="updateCartInfoMapper">
        update his_medicine_cart
        <set>
            cart=#{cart}
        </set>
        <where>
            id=#{id}
        </where>
    </update>
</mapper>