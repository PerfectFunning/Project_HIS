<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.medicine.mapper.HisMedicineSupplierMapper">
    
    <resultMap type="HisMedicineSupplier" id="HisMedicineSupplierResult">
        <result property="supplierId"    column="supplier_id"    />
        <result property="supplierName"    column="supplier_name"    />
        <result property="supplierPerson"    column="supplier_person"    />
        <result property="supplierPhone"    column="supplier_phone"    />
        <result property="supplierBank"    column="supplier_bank"    />
        <result property="supplierAddress"    column="supplier_address"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectHisMedicineSupplierVo">
        select supplier_id, supplier_name, supplier_person, supplier_phone, supplier_bank, supplier_address, status, create_by, create_time, update_by, update_time, remark from his_medicine_supplier
    </sql>

    <select id="selectHisMedicineSupplierList" parameterType="HisMedicineSupplier" resultMap="HisMedicineSupplierResult">
        <include refid="selectHisMedicineSupplierVo"/>
        <where>  
            <if test="supplierName != null  and supplierName != ''"> and supplier_name like concat('%', #{supplierName}, '%')</if>
            <if test="supplierPerson != null  and supplierPerson != ''"> and supplier_person = #{supplierPerson}</if>
            <if test="supplierPhone != null  and supplierPhone != ''"> and supplier_phone = #{supplierPhone}</if>
            <if test="supplierBank != null  and supplierBank != ''"> and supplier_bank = #{supplierBank}</if>
            <if test="supplierAddress != null  and supplierAddress != ''"> and supplier_address = #{supplierAddress}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectHisMedicineSupplierBySupplierId" parameterType="Long" resultMap="HisMedicineSupplierResult">
        <include refid="selectHisMedicineSupplierVo"/>
        where supplier_id = #{supplierId}
    </select>

    <insert id="insertHisMedicineSupplier" parameterType="HisMedicineSupplier" useGeneratedKeys="true" keyProperty="supplierId">
        insert into his_medicine_supplier
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="supplierName != null">supplier_name,</if>
            <if test="supplierPerson != null and supplierPerson != ''">supplier_person,</if>
            <if test="supplierPhone != null">supplier_phone,</if>
            <if test="supplierBank != null">supplier_bank,</if>
            <if test="supplierAddress != null">supplier_address,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="supplierName != null">#{supplierName},</if>
            <if test="supplierPerson != null and supplierPerson != ''">#{supplierPerson},</if>
            <if test="supplierPhone != null">#{supplierPhone},</if>
            <if test="supplierBank != null">#{supplierBank},</if>
            <if test="supplierAddress != null">#{supplierAddress},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateHisMedicineSupplier" parameterType="HisMedicineSupplier">
        update his_medicine_supplier
        <trim prefix="SET" suffixOverrides=",">
            <if test="supplierName != null">supplier_name = #{supplierName},</if>
            <if test="supplierPerson != null and supplierPerson != ''">supplier_person = #{supplierPerson},</if>
            <if test="supplierPhone != null">supplier_phone = #{supplierPhone},</if>
            <if test="supplierBank != null">supplier_bank = #{supplierBank},</if>
            <if test="supplierAddress != null">supplier_address = #{supplierAddress},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where supplier_id = #{supplierId}
    </update>

    <delete id="deleteHisMedicineSupplierBySupplierId" parameterType="Long">
        delete from his_medicine_supplier where supplier_id = #{supplierId}
    </delete>

    <delete id="deleteHisMedicineSupplierBySupplierIds" parameterType="String">
        delete from his_medicine_supplier where supplier_id in 
        <foreach item="supplierId" collection="array" open="(" separator="," close=")">
            #{supplierId}
        </foreach>
    </delete>
</mapper>