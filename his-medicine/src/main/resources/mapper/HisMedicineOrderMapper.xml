<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.medicine.mapper.HisMedicineOrderMapper">
    
    <resultMap type="HisMedicineOrder" id="HisMedicineOrderResult">
        <result property="orderId"    column="order_id"    />
        <result property="orderNum"    column="order_num"    />
        <result property="orderPerson"    column="order_person"    />
        <result property="supplierId"    column="supplier_id"    />
        <result property="orderMoney"    column="order_money"    />
        <result property="orderStatus"    column="order_status"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectHisMedicineOrderVo">
        select order_id, order_num, order_person, supplier_id, order_money, order_status, status, create_by, create_time, update_by, update_time, remark from his_medicine_order
    </sql>

    <select id="selectHisMedicineOrderList" parameterType="HisMedicineOrder" resultMap="HisMedicineOrderResult">
        <include refid="selectHisMedicineOrderVo"/>
        <where>  
            <if test="orderNum != null  and orderNum != ''"> and order_num = #{orderNum}</if>
            <if test="orderPerson != null "> and order_person = #{orderPerson}</if>
            <if test="supplierId != null "> and supplier_id = #{supplierId}</if>
            <if test="orderMoney != null "> and order_money = #{orderMoney}</if>
            <if test="orderStatus != null  and orderStatus != ''"> and order_status = #{orderStatus}</if>
        </where>
    </select>
    
    <select id="selectHisMedicineOrderByOrderId" parameterType="Long" resultMap="HisMedicineOrderResult">
        <include refid="selectHisMedicineOrderVo"/>
        where order_id = #{orderId}
    </select>

    <!-- useGeneratedKeys="true"  开启主键回显
          keyProperty="orderId"  将回显的主键赋值给orderId
    -->
    <insert id="insertHisMedicineOrder" parameterType="HisMedicineOrder" useGeneratedKeys="true" keyProperty="orderId">
        insert into his_medicine_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderNum != null">order_num,</if>
            <if test="orderPerson != null">order_person,</if>
            <if test="supplierId != null">supplier_id,</if>
            <if test="orderMoney != null">order_money,</if>
            <if test="orderStatus != null">order_status,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderNum != null">#{orderNum},</if>
            <if test="orderPerson != null">#{orderPerson},</if>
            <if test="supplierId != null">#{supplierId},</if>
            <if test="orderMoney != null">#{orderMoney},</if>
            <if test="orderStatus != null">#{orderStatus},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateHisMedicineOrder" parameterType="HisMedicineOrder">
        update his_medicine_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderNum != null">order_num = #{orderNum},</if>
            <if test="orderPerson != null">order_person = #{orderPerson},</if>
            <if test="supplierId != null">supplier_id = #{supplierId},</if>
            <if test="orderMoney != null">order_money = #{orderMoney},</if>
            <if test="orderStatus != null">order_status = #{orderStatus},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where order_id = #{orderId}
    </update>

    <delete id="deleteHisMedicineOrderByOrderId" parameterType="Long">
        delete from his_medicine_order where order_id = #{orderId}
    </delete>

    <delete id="deleteHisMedicineOrderByOrderIds" parameterType="String">
        delete from his_medicine_order where order_id in 
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>
</mapper>